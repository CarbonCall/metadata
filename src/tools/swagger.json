        "type": "string"
      },
      "ReportingStandard": {
        "enum": [
          "GAAP",
          "IFRS",
          "ISSB",
          "EFRAG",
          "GRI"
        ],
        "type": "string"
      },
      "SustainabilityReport": {
        "type": "object",
        "properties": {
          "grid": {
            "type": "string",
            "nullable": true
          },
          "metadata": {
            "$ref": "#/components/schemas/Metadata"
          },
          "report": {
            "type": "string",
            "description": "could be google.protobuf.Any or bytes",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TimePeriod": {
        "type": "object",
