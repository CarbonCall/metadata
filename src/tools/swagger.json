        "type": "string"
      },
      "ReportType": {
        "enum": [
          "IntegratedReport",
          "FinancialReport",
          "SustainabilityReport",
          "AnnualReport",
          "ProxyStatement",
          "RegistrationStatement",
          "QuarterlyReport",
          "HalfYearlyReport",
          "Other"
