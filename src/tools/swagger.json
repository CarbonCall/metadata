            "type": "string",
            "description": "Scheme prefix and identifier for the provider that conducted the assurance or audit.",
            "nullable": true
          },
          "priorReport": {
            "type": "string",
            "description": "GR.ID of the report this report is based on",
            "nullable": true
          },
          "reportHash": {
            "type": "string",
            "description": "SHA-256 hash of the report",
            "nullable": true
          },
          "activities": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Activity"
            },
            "description": "Activities that are reported on",
            "nullable": true,
            "readOnly": true
          },
          "reportContext": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Metatag"
            },
            "description": "Metatags that provide additional context for the report",
            "nullable": true,
            "readOnly": true
          },
          "propertyContexts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PropertyContext"
            },
            "description": "Property contexts that provide additional context for the report, i.e., section metadata",
            "nullable": true,
            "readOnly": true
          },
          "metatdataExtensions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MetadataExtension"
            },
            "description": "Extensions to the metadata",
            "nullable": true,
            "readOnly": true
          },
          "pfExtensions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProductFootprintExtension"
            },
            "description": "Extensions to any related product footprints in the report",
            "nullable": true,
            "readOnly": true
          },
