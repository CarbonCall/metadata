{
  "openapi": "3.0.1",
  "info": {
    "title": "Carbon Call Discoverable Data & Metadata - POC-1",
    "description": "A proof of concept API for the Carbon Call expert working groups for discoverable data and metadata.",
    "contact": {
      "name": "Marley Gray",
      "email": "marleyg@microsoft.com"
    },
    "license": {
      "name": "MIT License",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "v1-Carbon Call DD-Metadata"
  },
  "paths": {
    "/Metadata/getReport": {
      "get": {
        "tags": [
          "Metadata"
        ],
        "summary": "Get the sustainability report",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SustainabilityReport"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SustainabilityReport"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/SustainabilityReport"
                }
              }
            }
          }
        }
      }
    },
    "/Metadata/getMetadata": {
      "get": {
        "tags": [
          "Metadata"
        ],
        "summary": "Get the metadata",
        "parameters": [
          {
            "name": "grid",
            "in": "query",
            "description": "",
            "style": "form",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Metadata"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Metadata"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Metadata"
                }
              }
            }
          }
        }
      }
    }
  },
